@model IEnumerable<MvcCodeFirstApp.Data.Employee>
<h2>Employee List</h2>

<a asp-controller="Employee" asp-action="Create" class="btn btn-danger">Create</a>
<br><br>
<table class="table table-stripped" style="background-color:lightgray;">
        @foreach(var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeId</td>
                <td>@emp.EmployeeName</td>
                <td>@emp.Department.DepartmentName<td>
                <td>@emp.Salary</td>
                <td>@emp.JoinDate</td>
                <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.EmployeeId">Delete</a></td>
                <td><a asp-asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.EmployeeId">Edit</a></td>
            </tr>
        }
</table>
