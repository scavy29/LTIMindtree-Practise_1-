@model IEnumerable<kathakbooking.Models.Class>

<h2>Available Classes</h2>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Class ID</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Remaining Capacity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var danceClass in Model)
            {
                <tr>
                    <td>@danceClass.ClassID</td>
                    <td>@danceClass.StartTime</td>
                    <td>@danceClass.EndTime</td>
                    <td>@(danceClass.Capacity - danceClass.Students.Count)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available classes at the moment.</p>
}
